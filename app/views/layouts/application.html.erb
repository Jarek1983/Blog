<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

 <body>

    <%= render 'shared/navigation' %>
      
        <% if notice %>
          <div class="show_notice">
            <%= notice %>
          </div>
        <% end %>

        <% if alert %>
          <div class="show_alert">
            <%= alert %>
          </div>
        <% end %>
        
        <%= yield %>


        <%= render 'shared/footer' %>

  </body>

</html>
