  </head>

 <body>

  <%= render 'shared/navigation' %>
      


    <% if notice %>

      <div class="notice">

        <%= notice %>

      </div>

    <% end %>

    <% if alert %>

      <div class="alert">

        <%= alert %>
      
      </div>

    <% end %>
        
    <%= yield %>


  <%= render 'shared/footer' %>

  </body>

</html>
