<div class="container flex-column text-center d-flex justify-content-center login">


  <div class="p-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field p-2">
        <%= f.label :Email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control2" %>
      </div>

      <div class="field p-2">
        <%= f.label :Hasło %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field p-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, style: "height:50px;" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Zaloguj się", class: "btn_login" %>
      </div>
    <% end %>
  </div>

  <div class="p-5">
 <!--    <%= render "devise/shared/links" %> -->
  </div>

</div>


<%= render 'shared/section_icons' %>
