<div class="container text-center justify-content-center login">
	<div class="rowtext-center">
	  <div class="col"> </div>
	    <div class="col-md-12">

			<h1>Zapomniałeś hasła?</h2>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control2" %>
			  </div>

			  <div class="actions p-3">
			    <%= f.submit "Wyślij nowe hasło", class: "btn_login" %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>

	    </div>
	  <div class="col"> </div>
	</div>
</div>

<%= render 'shared/opinion' %>

<%= render 'shared/section_icons' %>